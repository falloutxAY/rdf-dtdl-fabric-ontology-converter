<?xml version="1.0" encoding="UTF-8"?>
<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
         xmlns:owl="http://www.w3.org/2002/07/owl#"
         xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
         xmlns:iot="http://example.org/iot/">

    <!-- IoT Device Management Ontology in RDF/XML format -->

    <owl:Ontology rdf:about="http://example.org/iot/IoTOntology">
        <rdfs:label>IoT Ontology (RDF/XML)</rdfs:label>
        <rdfs:comment>Simple IoT device management ontology in RDF/XML format</rdfs:comment>
    </owl:Ontology>

    <!-- Classes -->
    <owl:Class rdf:about="http://example.org/iot/Device">
        <rdfs:label>Device</rdfs:label>
        <rdfs:comment>An IoT device</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:about="http://example.org/iot/Sensor">
        <rdfs:label>Sensor</rdfs:label>
        <rdfs:comment>A sensor device</rdfs:comment>
        <rdfs:subClassOf rdf:resource="http://example.org/iot/Device"/>
    </owl:Class>

    <owl:Class rdf:about="http://example.org/iot/Location">
        <rdfs:label>Location</rdfs:label>
        <rdfs:comment>A physical location</rdfs:comment>
    </owl:Class>

    <!-- Datatype Properties -->
    <owl:DatatypeProperty rdf:about="http://example.org/iot/deviceId">
        <rdfs:domain rdf:resource="http://example.org/iot/Device"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:label>Device ID</rdfs:label>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="http://example.org/iot/deviceName">
        <rdfs:domain rdf:resource="http://example.org/iot/Device"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:label>Device Name</rdfs:label>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="http://example.org/iot/status">
        <rdfs:domain rdf:resource="http://example.org/iot/Device"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:label>Status</rdfs:label>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="http://example.org/iot/temperature">
        <rdfs:domain rdf:resource="http://example.org/iot/Device"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#double"/>
        <rdfs:label>Temperature</rdfs:label>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="http://example.org/iot/lastSeen">
        <rdfs:domain rdf:resource="http://example.org/iot/Device"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#dateTime"/>
        <rdfs:label>Last Seen</rdfs:label>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="http://example.org/iot/locationName">
        <rdfs:domain rdf:resource="http://example.org/iot/Location"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:label>Location Name</rdfs:label>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="http://example.org/iot/sensorType">
        <rdfs:domain rdf:resource="http://example.org/iot/Sensor"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:label>Sensor Type</rdfs:label>
    </owl:DatatypeProperty>

    <!-- Object Properties -->
    <owl:ObjectProperty rdf:about="http://example.org/iot/locatedAt">
        <rdfs:domain rdf:resource="http://example.org/iot/Device"/>
        <rdfs:range rdf:resource="http://example.org/iot/Location"/>
        <rdfs:label>Located At</rdfs:label>
        <rdfs:comment>Device is located at a location</rdfs:comment>
    </owl:ObjectProperty>

</rdf:RDF>
